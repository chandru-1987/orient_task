<h1>User Comments</h1>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th><%= sort_link "comment" %></th>
      <th><%= sort_link "created_at", "Added On" %></th>
    </tr>
  </thead>
  <tbody id="comment-body">
  	<%= render 'list' %>
  </tbody>
</table>
<br>

<div id="comment-form" class="modal fade"></div>
<%= link_to 'New Comment', new_comment_path, remote: true %>
