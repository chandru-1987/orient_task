$("ul.errors").html("")
<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $("#comment-body").html("<%= escape_javascript(render 'list') %>")
  $("#comment-form").modal("hide")
<% end %>